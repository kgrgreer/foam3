{
    "root": true,
    "extends": ["google"],
    "plugins": [
        "foam-style"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "templateStrings": true
        }
    },
    "globals": {
        "foam": true
    },
    "rules": {
        "no-with": "off",
        "no-var": "off",
        "comma-dangle": "off",
        "new-cap": [ "error", { "properties": false }],
        "object-curly-spacing": ["error", "always"],
        "max-len": [ "error", { "ignoreTemplateLiterals": true, "ignoreComments": true, "ignoreStrings": true } ],
        "prefer-rest-params": "off",
        "space-unary-ops": [
            1, {
                "words": true,
                "nonwords": false,
                "overrides": {
                    "!": true
                }
            }
        ],
        "require-jsdoc": "off",
        "foam-style/exploded-statements": "error",
        "no-multi-spaces": [
            1, {
                "exceptions": {
                    "Property": true,
                    "VariableDeclarator": true
                }
            }
        ],
        "indent": "off",
        "arrow-parens": ["warn", "as-needed"]
    }
}
